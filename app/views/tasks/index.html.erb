<h1 class="display-1">Tasks</h1>
<br>

<% @tasks.each do |task| %>



  <div class="card" style="width: 18rem;">
  <div class="card-body">
    <h3 class="card-title display-4"><%= link_to task.title, task_path(task) %></h3>
    <p class="card-text lead">
      <strong><%= "#{task.completed == true ? "Task Completed:" : "Task Not Completed:"}" %></strong>
      <%= "#{task.details}" %>
      </p>
      <button type="button" class="btn btn-danger">
      <%= link_to "Delete", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %></button>
  </div>
</div>


<% end %>
<br>

<button type="button" class="btn btn-outline-warning"><%= link_to "Add a new task", 'tasks/new' %></button>


