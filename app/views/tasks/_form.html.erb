
<%= form_for(@task) do |f| %>
  <div class="form-group">
  <%= f.label :title %>
  <%= f.text_field :title %>
  </div>
  <div class="form-group">
  <%= f.label :details %>
  <%= f.text_field :details %>
  </div>
  <div class="form-group">
  <%= f.label :completed %>
  <%= f.check_box :completed %>
  </div>
  <div class="form-group">
  <%= f.submit %>
  </div>
<% end %>



<br>

<button type="button" class="btn btn-outline-warning"><%= link_to "Back to task list", '/tasks' %></button>
